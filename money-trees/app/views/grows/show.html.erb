<p id="notice"><%= notice %></p>

<h1><%= @grow.name.titleize %></h1>

<%= link_to 'Edit', edit_grow_path(@grow) %> |
<%= link_to 'Back', grows_path %>

<h2>Rooms</h2>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Plants</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @grow.rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.plants.count %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

